<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.snstest.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"/>

    <TextView
        android:id="@+id/tv_vertify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="验证码"
        app:layout_constraintLeft_toLeftOf="@+id/tv_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintLeft_toRightOf="@+id/tv_phone"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_phone"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
        android:layout_marginStart="8dp"/>

    <EditText
        android:id="@+id/et_login"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vertify"
        app:layout_constraintLeft_toLeftOf="@+id/et_phone"
        app:layout_constraintTop_toTopOf="@+id/tv_vertify"
        app:layout_constraintVertical_bias="0.718"
        android:layout_marginStart="9dp"/>

    <Button
        android:id="@+id/btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/et_phone"
        app:layout_constraintLeft_toRightOf="@+id/et_login"
        app:layout_constraintTop_toTopOf="@+id/et_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/et_login"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="登录"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tv_voice_vertify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="点击进行语音播报"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_get"
        app:layout_constraintRight_toRightOf="@+id/btn_get"
        app:layout_constraintTop_toBottomOf="@+id/btn_get"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>
